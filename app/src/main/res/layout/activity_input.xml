<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activityRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_orange"
    tools:context="com.jimpitan.hangga.jimpitan.view.InputActivity">

    <!-- Login progress -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>






    <ScrollView
        android:layout_below="@+id/appBar"
        android:layout_above="@+id/relEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_green"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtDay"
                    android:layout_margin="4dp"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_nganu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/app_name"/>


                <TextView
                    android:layout_marginTop="38dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow_nganu"
                    android:textSize="18sp"
                    android:text="@string/namalabel"/>


                <TextView
                    android:id="@+id/txtNama"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/putih"
                    android:textSize="38sp"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:text="@string/nama"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relEditor"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/txtRp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/young_black"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputNominal"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtRp"
            android:layout_toLeftOf="@+id/fabSend">

            <EditText
                android:id="@+id/nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nominal"
                android:imeActionId="6"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/fabSend"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_send"
            android:src="@drawable/selector_btn_nominal"
            android:layout_marginRight="@dimen/fab_margin"/>

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/flowRp"
            android:layout_toRightOf="@+id/txtRp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputNominal"
            android:layout_toLeftOf="@+id/fabSend"
            android:padding="4dp"
            android:gravity="left"
            android:foregroundGravity="left"
            app:flChildSpacing="auto"
            app:flChildSpacingForLastRow="align"
            app:flRowSpacing="8dp">
        </com.nex3z.flowlayout.FlowLayout>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/send_progress"
        android:layout_alignParentBottom="true"
        style="@style/LinearProgress"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />
</RelativeLayout>
