<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jimpitan.hangga.jimpitan">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />




    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_qr_small"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_qr_small"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:icon"
        android:name="com.orm.SugarApp">

        <meta-data android:name="DATABASE" android:value="sugar_jimpitan.db" />
        <meta-data android:name="VERSION" android:value="3" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.jimpitan.hangga.jimpitan" />


        <activity
            android:name=".view.FrontActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ScannerActivity" />

        <activity
            android:name="com.jimpitan.hangga.jimpitan.view.InputActivity"
            android:label="@string/title_activity_input"></activity>
    </application>

</manifest>